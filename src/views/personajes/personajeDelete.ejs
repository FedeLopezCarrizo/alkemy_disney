<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', { css:'personajeDelete_style', js:'main' } ) %> 
<body>
    <div class="container">
        
        <!-- header -->
        <%- include('../partials/header') %> 
        <!-- /header --> 
        
        <!-- producto -->
        <section class="section__personajeDelete">

            <article class="article__personajeDelete"> 
                <h2>El personaje que va a eliminar es: <%= personajeToDelete.nombre %> </h2>
                <form action="/personajes/delete/<%= personajeToDelete.id %>?_method=DELETE" method="POST" enctype="multipart/form-data">
                    <div class="div__personajeDelete">
                        <label class="form__label">Nombre del personaje:</label>
                        <label class="form__label"><%= personajeToDelete.nombre %></label>						
					</div>
					<div class="div__personajeDelete">
                        <label class="form__label">Edad del personaje:</label>
                        <label class="form__label"><%= personajeToDelete.edad %></label>						
					</div>
					<div class="div__personajeDelete">
                        <label class="form__label">Peso del personaje:</label>
                        <label class="form__label"><%= personajeToDelete.peso %></label>
					</div> 
					<div class="div__personajeDelete">
                        <label class="form__label">Historia del personaje:</label>
                        <label class="form__label"><%= personajeToDelete.historia %></label>
                    </div>
                    
                    <div class="div__button">
                        <button type="submit" class="button__delete">Eliminar personaje</button>
                    </div>
                </form>
            </article>
        </section>
    </div>
</body>
</html>